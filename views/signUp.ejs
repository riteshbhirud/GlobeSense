<!doctype html>

<html>
<head>
  <title>Sign Up</title>
  
  <link rel="stylesheet" href="/css/authentication.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  

</head>

<body>
    <nav class="navbar navbar-purple">
      <div class="container-fluid">
          <a class="navbar-brand" href="#">GlobeSense</a>
          <ul class="navbar-nav">
              <li class="nav-item">
                  <a class="nav-link" href="/">Home </a>
              </li>
          </ul>
      </div>
    </nav>
    <h1 id="title">Welcome!</h1>
    <form id="registerForm" action="/api/users/register" method="POST">
      <div class="formContainer">
        <div>
          <label for="username" class="inputLabels">Username</label><br>
          <input type="text" id="username" name="username" class="inputField" required><br>
        </div>
        <div>
          <label for="email" class="inputLabels">Email</label><br>
          <input type="text" id="email" name="email" class="inputField" required><br>
        </div>
        <div>
          <label for="password" class="inputLabels">Password</label><br>
          <input type="password" id="password" name="password"class="inputField" required><br><br>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrf_token %>">
        <input type="submit" value="Submit" class="inputField">
        <div id="loginLink">
          Already have an account? <a href="/login" id="loginLinkActual">Log in here</a>
        </div>
      </div>
    </form>
    


</body>

</html>

