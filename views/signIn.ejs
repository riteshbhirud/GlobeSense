<!doctype html>

<html>
<head>
  <title>Sign In</title>
  
  <link rel="stylesheet" href="/css/authentication.css">
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  

</head>

<body>
  <nav class="navbar navbar-purple">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">GlobeSense</a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/">Home </a>
            </li>
        </ul>
    </div>
  </nav>
    <h1 id="title">Welcome Back!</h1>

  
  <form id="signin" action="/api/users/login" method="POST" >
    <div class = "formContainer"> 
      <div>
        <label for="username" class="inputLabels">Username</label><br>
        <input required type="text" id="username" name="username" class="inputField"><br>
      </div>
      <div>
        <label for="password" class="inputLabels">Password</label><br>
        <input required type="password" id="password" name="password" class="inputField"><br>
      </div>
      <input type="hidden" name="_csrf" value="<%= csrf_token %>">
      <input type="submit" value="Submit">
      <a href="/register" id="createAcct">Create an account</a>
    </div>
  </form>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.js"></script>
  <% if (message.length > 0) { %>
    <script>
      Toastify({
        text: "<%= message %>",
        duration: 3000, // 3 seconds
        backgroundColor: "linear-gradient(to right, #ff5f6d, #ffc3a0)"
      }).showToast();
    </script>
  <% } %>

  

</body>


</html>

